---
import Linkedin from "../icons/linkedin.astro";
import Github from "../icons/github.astro";
import SocialLinks from "./Social_links.astro";
import { LINKEDIN_URL, GITHUB_URL, RESUME_URL, EMAIL_ADDRESS } from '../constants/index';
interface Props {
  id: string;
}
const { id } = Astro.props;
---
<section {id} class="w-full min-h-screen bg-gradient flex justify-center items-center flex-col gap-10 md:gap-8 shadow-primary drop-shadow-md">
  <h1 class="font-montserrat w-full font-bold text-4xl min-[300px]:text-5xl sm:text-6xl md:text-7xl xl:text-8xl tracking-[-.15rem] sm:tracking-[-.35rem] lg:tracking-[-.5rem] flex flex-col items-center">
    Hi, I'm
    <span class="inline">
      <span id="name-title" class="highlight-offset tracking-tight leading-3 font-dm-sans">Marc Arcedo</span>
    </span>
    <span class="w-full text-center text-3xl min-[300px]:text-5xl sm:text-7xl md:text-8xl xl:text-9xl tracking-[-.25rem] sm:tracking-[-.6rem] md:tracking-[-.9rem]">
      A Web Developer.
    </span>
  </h1>
  <p class="font-dm-sans text-sm md:text-base xl:text-xl font-semibold w-10/12 md:w-6/12 text-center">
    With <span class="highlight-offset">over a year</span> of <span class="highlight-offset">experience</span>. Based in <span class="highlight-offset">Barcelona</span>, Spain, I'm passionate about both <br class="hidden xl:block"><span class="highlight-offset">dev</span> and <span class="highlight-offset">design</span>. Iâ€™m focusing on <span class="highlight-offset">backend</span>, exploring better, more efficient ways <br class="hidden xl:block">to code. Right now, I'm learning <span class="highlight-offset">Rust</span> and <span class="highlight-offset">Go</span> to get a stronger handle <br class="hidden xl:block">on <span class="highlight-offset">systems programming</span> and <span class="highlight-offset">lower-level concepts</span>.
  </p>
  <div class="flex justify-around items-center gap-2.5 md:gap-5">
    <SocialLinks 
      href={LINKEDIN_URL} 
      bubbleText="LinkedIn"
      anchorClassName="bg-black text-primary p-1 flex justify-center items-center rounded-md w-[2.5rem] h-[2.5rem] sm:w-[3.375rem] sm:h-[3.375rem] hover:scale-105 hover:bg-black/95 transition-all duration-300"
    >
      <Linkedin/>
    </SocialLinks>
    <SocialLinks 
      href={GITHUB_URL} 
      bubbleText="GitHub"
      anchorClassName="bg-black text-primary p-1 flex justify-center items-center rounded-md w-[2.5rem] h-[2.5rem] sm:w-[3.375rem] sm:h-[3.375rem] hover:scale-105 hover:bg-black/95 transition-all duration-300"
    >
      <Github/>
    </SocialLinks>
    <SocialLinks 
      href={RESUME_URL} 
      bubbleText="Resume"
      anchorClassName="bg-black text-primary p-1 flex justify-center items-center rounded-md w-[2.5rem] h-[2.5rem] sm:w-[3.375rem] sm:h-[3.375rem] hover:scale-105 hover:bg-black/95 transition-all duration-300"
    >
      <strong class="font-bold sm:text-3xl text-2xl font-montserrat">CV</strong>
    </SocialLinks>
    <SocialLinks 
      href={'mailto:'+EMAIL_ADDRESS} 
      bubbleText="arcedo.marc@gmail.com"
      anchorClassName="bg-black text-primary p-1 flex justify-center items-center rounded-md w-[2.5rem] h-[2.5rem] sm:w-[3.375rem] sm:h-[3.375rem] hover:scale-105 hover:bg-black/95 transition-all duration-300 pb-2.5"
    >
      <strong class="font-bold sm:text-3xl text-2xl">@</strong>
    </SocialLinks>
  </div>
</section>

<style>
    #name-title {
        animation: fontChange 6s infinite;
    }
    @font-face {
        font-family: 'DotGothic';
        src: url('/fonts/DotGothic16-Regular.woff2') format('woff2');
    }
    @font-face {
        font-family: 'NotoSerif';
        src: url('/fonts/NotoSerif_SemiCondensed-Medium.woff2') format('woff2');
    }
    @font-face {
      font-family: 'IBMPlexMono';
      src: url('/fonts/IBMPlexMono-Medium.woff2') format('woff2');
    }
    @keyframes fontChange {
        0% {
            font-family: 'DMSans', sans-serif;
        }
        25% {
            font-family: 'NotoSerif', sans-serif;
        }
        50% {
            font-family: 'IBMPlexMono', sans-serif;
        }
        75% {
            font-family: 'DotGothic', sans-serif;
        }
    }
</style>